@model GameXchange.Pages.Forms.AccountLoginModel
@{
}
<!DOCTYPE html>
<html>
<head>

    <meta name="viewport" content="width=device-width, intial-scale=1.0" />
    <link rel="stylesheet" href="~/css/login.css" />
    <script src="~/js/site.js" asp-append-version="true"></script>

</head>
<body>
    <div id="container">


        <div id="content">
            <center>
                <form action="http://www.WebsiteDevelopmentBook.com/FormEcho.php" method="post" onsubmit="return check_info()">
                    <fieldset class="feild">


                        <div class="login-box">
                            <h2>Existing Account</h2>
                            <div class="user-box">
                                <input type="text" id="username" name="username" /><br />
                                <label for="user">Username:</label>

                            </div>
                            <div class="user-box">
                                <input type="password" id="password" name="password" /><br />
                                <label for="pass">Password:</label>
                            </div>
                            <a href="#">
                                <span></span>
                                <span></span>
                                <span></span>
                                <span></span>
                                <input type="submit" value="Click to Submit" />

                            </a>
                        </div>
                    </fieldset><br />
                </form>
            </center>


            <center>
                <form name="myForm" action="http://www.WebsiteDevelopmentBook.com/FormEcho.php" method="post">

                    <fieldset class="feild">
                        <legend><b>New Account</b> </legend>

                        <div class="col-3">
                            <a asp-page="/AccountList/Create" class="btn btn-info form-control text-white">Create New Account</a>
                        </div>

                    </fieldset><br />
                </form>
            </center>
        </div>

    </div>



</body>
</html>